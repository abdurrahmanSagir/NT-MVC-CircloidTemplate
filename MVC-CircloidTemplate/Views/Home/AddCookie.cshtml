
@{
    ViewBag.Title = "Çerez Ekle";
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-lg-12 ">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Çerez ekleme sayfası
                </div>
                <div class="block-controls">
                    <a href="/Category/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Home/AddCookie" method="post" role="form" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Cookie Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Kategori adı giriniz" name="CookieName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Cookie Değeri:</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Cookie Değeri Giriniz" name="CookieValue">
                        </div>

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a href="/Home/RetrieveCookie/" class="btn btn-danger">Cookie Görüntüle</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
