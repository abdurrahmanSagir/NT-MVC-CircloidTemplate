
@{
    ViewBag.Title = "Roller";
}

@using System.Web.Security

@model List<String>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Roller Listesi
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Role/AddRole" class="btn btn-success rounded" role="button">Rol Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Rol Adı</th>
                                <th>Sil</th>
                                
                        </thead>
                        <tbody>
                            @foreach (String role in Model)
                            {
                                <tr>
                                    <td>@role</td>
                                   
                                    <td><a href="/Role/DeleteRole/?role=@role" class="btn btn-danger rounded deleteRole" data-memberName="@role">Sil</a></td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


